#include <lcom/lcf.h>

#include <minix/syslib.h>
#include <minix/sysutil.h>
#include <stdint.h>

#include "8042.h"
#include "keyboard.h"

int hook_id; //Global variable that will contain the value of hook_id used to subscribe and unsubscribe the interrupts

extern uint32_t counterSysIn;
extern uint8_t code;

uint32_t counterSysIn = 0; //Number of sys_inb calls
uint8_t code = 0;  //Scancode

int(kbd_subscribe_int)(uint8_t *bit_no) {

  hook_id = (int) *bit_no;
  //Assigning the value of bit_no to the global variable hook_id
  //so that we can preserve bit_no when we call sys_irqsetpolicy

  if (sys_irqsetpolicy(KEYBOARD_IRQ, IRQ_REENABLE | IRQ_EXCLUSIVE, &hook_id) != OK) //Subscribing a notification on every interrupt in the input TIMER0_IRQ
    return 1;                                                                       //Value of hook_id will be used later in timer_unsubscribe_int()

  *bit_no = (uint8_t) BIT(*bit_no); //Returning the bit with number bit_no setting to 1

  return 0;
}

int(kbd_unsubscribe_int)() {

  if (sys_irqrmpolicy(&hook_id) != OK) //Unsubscribing the subscription of the interrupt notification associated with the specified hook_id
    return 1;

  return 0;
}

void (kbc_ih)() {
  
  uint32_t data; //Variable that will contain a byte from the scancode

    if(sys_inb_cnt(OUT_BUF, &data)!= OK) //If there is an error in the sys_inb, the code will have an error
      code = 0;
    else
      code = (uint8_t)data; //Else, the byte of the scancode will be passed to the variable code
   
}


uint8_t readScanCode(){

  uint32_t stat; //Status
  uint32_t data; //Variable that will contain a byte from the scancode

  while( 1 ) {

   sys_inb_cnt(STAT_REG, &stat); /*assuming it returns OK*/
    /*loop while 8042 output buffer is empty*/
   if( stat & OBF ) {
     sys_inb_cnt(OUT_BUF, &data); /*assuming it returns OK*/
     if ( (stat & (PAR_ERR | TO_ERR)) == 0 )
       return data;
     else
        return -1;
    }
   tickdelay(micros_to_ticks(DELAY_US));
  }
}

void enableInterrupts(){ //TODO Corrigir função para permitir o enable dos interrupts
  int kbcCommand = READ_COM_B;
  sys_outb(KBC_CMD_REG, kbcCommand);

  uint32_t cmb;
  sys_inb_cnt(OUT_BUF, &cmb);
  
  kbcCommand = WRITE_COM_B;
  sys_outb(KBC_CMD_REG, kbcCommand);

  cmb |= ENABLE_INT_KBD;

  sys_outb(OUT_BUF, cmb);
}

int (sys_inb_cnt)(port_t port, uint32_t *byte) {
  counterSysIn++;
  if (sys_inb(port, byte) != OK)
    return 1;
  return 0;
}
